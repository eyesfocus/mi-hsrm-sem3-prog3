#include <stdio.h>

/*Tina Schedlbauer*/


int my_strcasecmp(const char *s1, const char *s2){
  int dist = ('a'-'A'); /*abstand zwischen gross und klein*/
 
  while(*s1 == *s2 || (*s1+dist) == *s2 || (*s1-dist) == *s2){    
    if(*s1 == '\0'){
      return 0;
    } 
    s1++;
    s2++;
  }

  if(('A' <= *s1 && *s1 <= 'Z') && ('a' <= *s2 && *s2 <= 'z')){
    return ((*s1+dist) - *s2);
  }
 
  if(('a' <= *s1 && *s1 <= 'z') && ('A' <= *s2 && *s2 <='Z')){
    return ((*s1-dist) - *s2);
  }

  return (*s1-*s2);

}

const char *my_index(const char *s, int c){
  while(*s){
    if (*s == c){
      return s;
    }
    ++s;
  }
  return NULL; 
}
